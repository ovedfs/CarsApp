<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarsApp.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout Padding="20">

            <Image Source="login.png" HorizontalOptions="Center" VerticalOptions="Center"/>

            <Entry x:Name="entryEmail" Placeholder="Correo..." Keyboard="Email"/>
            <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True"/>
            
            <StackLayout Margin="0,30" Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="LoginButton" Text="Login" 
                        Clicked="LoginButton_Clicked"
                        BackgroundColor="OrangeRed"
                        TextColor="White"/>
                <Button x:Name="RegisterButton" Text="Registro" 
                        Clicked="RegisterButton_Clicked"
                        BackgroundColor="Transparent"
                        TextColor="Blue"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>